<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8"> 
        <meta charset="utf-8">

        <title>Interviewer Profile</title>
        {{> bootplyBoilerplate}}
    </head>
    
    <!-- HTML code from Bootply.com editor -->
    
    <body>
        
    <div class="wrapper">
    <div class="box">
        <div class="row row-offcanvas row-offcanvas-left">
          
            <!-- sidebar -->
            {{> interviewerProfileSidebar}}
            <!-- /sidebar -->
          
            <!-- main right col -->
            <div class="column col-sm-10 col-xs-11" id="main">
              <div class="padding">
                  <div class="full col-sm-9">

                    <!-- Placeholder for "saved" notfication -->
                    <div id="save-notification"></div>
                    
                    <!-- content -->                      
                    <div class="row" id="content">
                                         
                      <div class = "row profile-header">
                        <div class="row">
                          <h1>Edit Your Info</h1>
                            <form role="form" id = "signup-form" method="get" action="/editInterviewerProfile">
                              <div class="form-group">
                                <div class = "row">
                                  <div class = "col-md-6">
                                    <label for="fname">First Name</label>
                                    <input type="text" class="form-control" id="fname" value="{{firstname}}" name="fname">
                                  </div>
                                  <div class = "col-md-6">
                                    <label for="lname">Last Name</label>
                                    <input type="text" class="form-control" id="lname" value="{{lastname}}" name="lname">
                                  </div>
                                </div>
                                <div class = "col-md-6">
                                  <label for="email">Email address</label>
                                  <!-- This is a hack! Used to get the username -->
                                  <textarea class="form-control" rows="1"name="email">{{email}}</textarea>
                                </div>
                                  <div class = "col-md-6">
                                    <label for="education">Education</label>
                                    <input type="text" class="form-control" id="education" value="{{education}}" name="education">
                                  </div>
                                  <div class = "col-md-6">
                                    <label for="occupation">Occupation</label>
                                    <input type="text" class="form-control" id="occupation" value="{{occupation}}" name="occupation">
                                  </div>
                                  <div class = "col-md-6">
                                    <label for="occupation">Current Company</label>
                                    <input type="text" class="form-control" id="company" value="{{company}}" name="company">
                                  </div>
                                  <div class = "col-md-6">
                                    <label for="location">Current Location</label>
                                    <input type="text" class="form-control" id="location" value="{{location}}" name="location">
                                  </div>
                                </div>
                                <br>
                                  <button type="submit" id="submit" class="btn btn-default">Save</button>
                                </div>
                              </form>
                        </div><!--/row-->                
                  </div><!-- /col-9 -->
              </div><!-- /padding -->
            </div>
            <!-- /main -->
        </div>
    </div>
</div>

        
        <script type='text/javascript' src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>


        <script type='text/javascript' src="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>

        
        <!-- JavaScript jQuery code from Bootply.com editor -->
        
        <script type='text/javascript'>
        
          $(document).ready(function() {
              /* off-canvas sidebar toggle */

              $('[data-toggle=offcanvas]').click(function() {
                  $(this).toggleClass('visible-xs text-center');
                  $(this).find('i').toggleClass('glyphicon-chevron-right glyphicon-chevron-left');
                  $('.row-offcanvas').toggleClass('active');
                  $('#lg-menu').toggleClass('hidden-xs').toggleClass('visible-xs');
                  $('#xs-menu').toggleClass('visible-xs').toggleClass('hidden-xs');
                  $('#btnShow').toggle();
              });

              // Handles "saved" notification when submit changes.
              $('#submit').click(function(e) {
                e.preventDefault();
                $('#save-notification').empty();
                var notification = $('<div class="alert alert-success alert-dismissable" style="display:none;"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><strong>You changes have been saved!</strong></div>'); 
                $('#save-notification').append(notification);
                notification.fadeIn('slow');
              });
          });
        
        </script>
        
    </body>
</html>