<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8"> 
  <meta charset="utf-8">
  <title>Interview Profile</title>
  {{> bootplyBoilerplate}}
</head>    
<body>
  <div class="wrapper"><!--from bootply-->
    <div class="box"><!--from bootply-->
      <div class="row row-offcanvas row-offcanvas-left"><!--from bootply-->
        {{> intervieweeProfileSidebar}}
        <div class="column col-sm-10 col-xs-11" id="main"><!--from bootply-->
          <div class="padding">
            {{> logout}}
            <br>
            <div class="row">
              <div class = "col-md-12">
                <a href="/editIntervieweeProfile">
                  <button type="submit" class="btn btn-primary btn-large edit-button">
                    <i class="edit-icon glyphicon glyphicon-pencil"></i>
                  </button>
                </a>
              </div>
            </div>
            <div class="col-md-8 extrainfo">
              <h1>{{firstname}} {{lastname}}</h1><br>
              <p><h4><small>interviewee</h4></small><br>
              <div class="row">
                <div class="col-md-4 extrainfo">
                  <address>
                    {{location}}<br>
                  </address>
                  <address>
                    <strong>{{education}}</strong><br>
                  </address>
                </div>
                <div class="col-md-4 extrainfo">
                  <address>
                    <strong>{{occupation}}</strong><br>
                    <a href="mailto:#">{{email}}</a>
                  </address>
                </div>
              </div>
              <a href="/matchForInterviewee">
                <button type = "button" class = "btn btn-primary btn-large">Match with an interviewer</button>
              </a>
            </div>
        </div><!--from bootply-->
      </div><!--from bootply-->
    </div><!--from bootply-->
  </div><!--from bootply-->
  <script type='text/javascript' src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script type='text/javascript' src="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
  <!-- JavaScript jQuery code from Bootply.com editor -->  
  <script type='text/javascript'> 
  $(document).ready(function() {
    /* off-canvas sidebar toggle */
    $('[data-toggle=offcanvas]').click(function() {
      $(this).toggleClass('visible-xs text-center');
      $(this).find('i').toggleClass('glyphicon-chevron-right glyphicon-chevron-left');
      $('.row-offcanvas').toggleClass('active');
      $('#lg-menu').toggleClass('hidden-xs').toggleClass('visible-xs');
      $('#xs-menu').toggleClass('visible-xs').toggleClass('hidden-xs');
      $('#btnShow').toggle();
    });

    $('#available').click(function(e){
        $('#toggle-availability').submit();
    });

    $('#unavailable').click(function(e){
        $('#toggle-availability').submit();
    });
  });
  </script>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-48588207-1', {'cookieDomain': 'none'});
    ga('send', 'pageview');
    $(document).ready(function(){
      $('.sidebar').click(function(e){
        e.preventDefault();
        ga('send', 'event', 'sidebar', 'click');
        window.location.href = $(this).attr('href');
      });
    })
  </script>
</body>
</html>